{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:node/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "node/no-unpublished-require": "off",
        "global-require": "off",
        "import/no-extraneous-dependencies": "off",
        "import/no-dynamic-require" :"off",
        "import/extensions":[
            "error","never",{
                "js": "always",
                "json": "always"
            }
        ]
    }
}